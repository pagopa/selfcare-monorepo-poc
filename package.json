{
  "name": "selfcare-monorepo-poc",
  "version": "0.0.1",
  "private": true,
  "description": "PoC for SelfCare Monorepo with Nx Release and Version Plans",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "libs/*",
    "infra/dev/*",
    "infra/uat/*",
    "infra/prod/*"
  ],
  "scripts": {
    "changeset": "nx release plan",
    "release": "npm run release:version && npm run sync-pom",
    "release:version": "nx release --skip-publish",
    "release:preview": "node scripts/preview-release.js",
    "sync-pom": "node scripts/sync-all-poms.js",
    "affected": "nx affected",
    "graph": "nx graph"
  },
  "devDependencies": {
    "nx": "^19.0.0",
    "@nx/js": "^19.0.0",
    "@nx/maven": "latest",
    "prettier": "^3.2.5"
  }
}
